[Unit]
Description=Svety Flask via Gunicorn
After=network-online.target
Wants=network-online.target

[Service]
User=debian
Group=debian
WorkingDirectory=/home/debian/telegram_bots/svety
EnvironmentFile=-/home/debian/telegram_bots/svety/.env
ExecStart=/home/debian/telegram_bots/svety/venv/bin/gunicorn -w 2 --threads 4 -b 127.0.0.1:5000 svety.web:app
Restart=always
RestartSec=5
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
